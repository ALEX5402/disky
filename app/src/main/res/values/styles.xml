<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Disky" parent="Base.Theme.Disky" >
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@drawable/icon_logo</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">?attr/colorSurface</item>

        <item name="popupMenuBackground">@drawable/shape_popup_background</item>
    </style>

    <style name="Widget.App.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackThickness">6dp</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorColor">?attr/colorLinearIndicator</item>
    </style>

    <style name="BaseCircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="trackThickness">4dp</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorColor">?attr/colorCircularIndicator</item>
    </style>

    <style name="CircularProgressBackground" parent="BaseCircularProgressIndicator">
        <item name="indicatorColor">?attr/colorCircularBackground</item>
    </style>

    <!-- Card Styles need to be applied to the card directly.-->
    <style name="PrimaryCardStyle">
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:tint">?attr/colorOnPrimaryContainer</item>
    </style>
</resources>